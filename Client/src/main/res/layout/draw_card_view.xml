<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="top">
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="10"
            android:background="@color/red"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/red_cardCount"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="10"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/orange"
            android:id="@+id/orange_cardCount"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="10"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/yellow"
            android:id="@+id/yellow_cardCount"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="10"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/green"
            android:id="@+id/green_cardCount"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="10"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/blue"
            android:id="@+id/blue_cardCount"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="10"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/purple"
            android:id="@+id/purple_cardCount"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="10"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:id="@+id/white_cardCount"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="10"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/black"
            android:id="@+id/black_cardCount"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="10"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/wild"
            android:id="@+id/wild_cardCount"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="225dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card0"
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/card1"
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/card2"
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/card3"
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/card4"
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:layout_marginHorizontal="16dp" />

        <ImageView
            android:id="@+id/deck"
            android:layout_width="160dp"
            android:layout_height="240dp"
            android:layout_marginHorizontal="16dp" />
    </LinearLayout>
</LinearLayout>